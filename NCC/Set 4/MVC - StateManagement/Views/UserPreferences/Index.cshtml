@model UserPreferences

<h1>User Preferences</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<form asp-action="SavePreferences" method="post">
    <div class="form-group">
        <label asp-for="Theme">Theme:</label>
        <select asp-for="Theme" class="form-control">
            <option value="light">Light</option>
            <option value="dark">Dark</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ItemsPerPage">Items Per Page:</label>
        <input asp-for="ItemsPerPage" class="form-control" min="5" max="50" />
    </div>

    <div class="form-check">
        <input asp-for="NotificationsEnabled" class="form-check-input" />
        <label asp-for="NotificationsEnabled" class="form-check-label">Enable Notifications</label>
    </div>

    <div class="form-group">
        <label asp-for="Language">Language:</label>
        <select asp-for="Language" class="form-control">
            <option>English</option>
            <option>Spanish</option>
            <option>French</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Preferences</button>
</form>